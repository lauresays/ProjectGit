class Article:
    
    def __init__ (self, fichier):
        self.fichier = fichier
    
    def lire():
        fichier = open("data.txt", "r")
        print(fichier)
        
    def ecriture():
        fichier = open("data.txt", "w")
        fichier.write("Bonjour monde")
        fichier.close()
    
        
    
        
